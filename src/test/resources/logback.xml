<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Defina o nível de log para ERROR -->
    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Você pode adicionar exceções específicas aqui -->
    <!-- Exemplo: <logger name="org.asynchttpclient" level="WARN" /> -->

</configuration>